{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2016",
    "rootDir": "./",
    "baseUrl": "./",
    "outDir": "./build",
    "allowJs": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true
  }
}
